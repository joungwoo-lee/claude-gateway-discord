# Discord 봇 토큰
DISCORD_TOKEN=your_bot_token_here

# 봇을 제어할 수 있는 유일한 사용자의 Discord ID
ADMIN_USER_ID=your_admin_user_id_here

# 봇이 동작할 Discord 채널 ID (0이면 모든 채널)
CHANNEL_ID=0

# Claude Code 추가 인자 (선택사항, 예: "--model sonnet")
CLAUDE_EXTRA_ARGS=--dangerously-skip-permissions

# ── 세션 메모리 모드 ──
# none     = 세션 저장/검색 비활성화 (기본값)
# local    = 내장 임베딩 (SQLite + sentence-transformers)
# external = 외부 RAG 시스템 (아래 RETRIEVER_* 설정 필요)
CLAUDE_GATEWAY_SESSION_MEMORY=none

# 외부 RAG 시스템 (CLAUDE_GATEWAY_SESSION_MEMORY=external 일 때만 사용)
RETRIEVER_BASE_URL=http://localhost:9380   # 외부 RAG 서버 URL
RETRIEVER_API_KEY=secret-key               # 외부 RAG API 키
RAG_DATASET_IDS=mymemory                   # 외부 RAG dataset ID

# 공통 설정
RETRIEVER_TOP_N=8                          # 검색 결과 수
RETRIEVER_SIMILARITY_THRESHOLD=0.2         # 최소 유사도
RETRIEVER_VECTOR_WEIGHT=0.3                # (외부 RAG 전용) 벡터 가중치
